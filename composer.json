{
    "name": "davidepastore/slim-validation",
    "description": "A slim middleware for validation based on Respect/Validation",
    "keywords": ["slim","framework","middleware","validation", "validator"],
    "type": "library",
    "authors": [
        {
            "name": "Davide Pastore",
            "email": "pasdavide@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-message": "^1.0.1",
        "respect/validation": "^2.2.4"
    },
    "require-dev": {
        "slim/slim": "^3.13.1",
        "phpunit/phpunit": "^9.6.5",
        "scrutinizer/ocular": "^1.8.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:daysofwonder/Slim.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "DavidePastore\\Slim\\Validation\\": "src"
        }
    },
    "license" : "GPL-2.0+",
    "autoload-dev": {
        "psr-4": {
            "DavidePastore\\Slim\\Validation\\Tests\\": "tests"
        }
    }
}
